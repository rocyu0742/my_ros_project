<launch>
  <!-- ME48B Library Robot - Complete Mapping Setup -->
  <!-- Launches: World + Robot + GMapping + Teleop -->

  <arg name="gui" default="true"/>
  <arg name="model" default="burger"/>

  <!-- Library Environment with Robot -->
  <include file="$(find me48b_library_robot)/launch/library_with_robot.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- GMapping SLAM -->
  <include file="$(find me48b_library_robot)/launch/mapping.launch">
    <arg name="model" value="$(arg model)"/>
  </include>

</launch>
