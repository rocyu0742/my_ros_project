<launch>
  <!-- ME48B Library Robot - Full System Launch -->
  <!-- Launches: Library World + Robot + Navigation Stack -->

  <arg name="gui" default="true"/>
  <arg name="model" default="burger"/>

  <!-- 1. Launch Library Environment & Robot -->
  <include file="$(find me48b_library_robot)/launch/library_with_robot.launch">
    <arg name="gui" value="$(arg gui)"/>
    <arg name="model" value="$(arg model)"/>
  </include>

  <!-- 2. Launch Navigation (AMCL + move_base + map_server) -->
  <include file="$(find me48b_library_robot)/launch/navigation.launch">
    <arg name="model" value="$(arg model)"/>
    <arg name="open_rviz" value="true"/>
  </include>

</launch>
