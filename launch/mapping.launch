<launch>
  <!-- ME48B Library Robot - GMapping SLAM Launch File -->
  <!-- Creates a 2D occupancy grid map of the library environment -->

  <arg name="model" default="burger"/>
  
  <!-- GMapping Node -->
  <node pkg="gmapping" type="slam_gmapping" name="slam_gmapping" output="screen">
    <!-- Frame IDs -->
    <param name="base_frame" value="base_footprint"/>
    <param name="odom_frame" value="odom"/>
    <param name="map_frame" value="map"/>
    
    <!-- Map update parameters -->
    <param name="map_update_interval" value="2.0"/>
    
    <!-- Laser parameters -->
    <param name="maxUrange" value="3.5"/>      <!-- Max usable range of laser -->
    <param name="maxRange" value="4.0"/>       <!-- Max range of laser -->
    <param name="sigma" value="0.05"/>
    <param name="kernelSize" value="1"/>
    <param name="lstep" value="0.05"/>
    <param name="astep" value="0.05"/>
    <param name="iterations" value="5"/>
    <param name="lsigma" value="0.075"/>
    <param name="ogain" value="3.0"/>
    <param name="lskip" value="0"/>
    
    <!-- Motion model parameters -->
    <param name="srr" value="0.1"/>
    <param name="srt" value="0.2"/>
    <param name="str" value="0.1"/>
    <param name="stt" value="0.2"/>
    
    <!-- Map size/resolution -->
    <param name="xmin" value="-15.0"/>
    <param name="ymin" value="-15.0"/>
    <param name="xmax" value="15.0"/>
    <param name="ymax" value="15.0"/>
    <param name="delta" value="0.05"/>         <!-- Map resolution (meters/pixel) -->
    
    <!-- Particle filter -->
    <param name="particles" value="30"/>
    <param name="linearUpdate" value="0.5"/>   <!-- Move this much before updating -->
    <param name="angularUpdate" value="0.5"/>  <!-- Rotate this much before updating -->
    <param name="temporalUpdate" value="3.0"/>
    <param name="resampleThreshold" value="0.5"/>
    
    <!-- Likelihood parameters -->
    <param name="llsamplerange" value="0.01"/>
    <param name="llsamplestep" value="0.01"/>
    <param name="lasamplerange" value="0.005"/>
    <param name="lasamplestep" value="0.005"/>
    
    <!-- TF timeout -->
    <param name="tf_delay" value="0.05"/>
  </node>

  <!-- RViz for visualization -->
  <node pkg="rviz" type="rviz" name="rviz" 
        args="-d $(find me48b_library_robot)/rviz/mapping.rviz" 
        required="false"/>

</launch>
